<Window x:Class="Arma_3_LTRM.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D5A8F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3F3F46"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Arma 3 Executable Location" FontWeight="Bold" Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="Arma3PathTextBox" Grid.Column="0" IsReadOnly="True"/>
                <Button x:Name="BrowseArma3Button" Grid.Column="2" Content="Browse..." Click="BrowseArma3Button_Click"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Base Download Locations (in order of preference)" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="The first location will be used as the default. You can reorder them using the buttons." 
                       FontSize="12" Foreground="#999" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <ListBox x:Name="BaseDownloadLocationsListBox" Grid.Column="0" Grid.Row="0" 
                         Height="120" SelectionMode="Single"/>
                
                <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Center">
                    <Button x:Name="AddLocationButton" Content="Add..." Width="80" Click="AddLocationButton_Click" Margin="0,0,0,5"/>
                    <Button x:Name="RemoveLocationButton" Content="Remove" Width="80" Click="RemoveLocationButton_Click" Margin="0,0,0,5"/>
                    <Button x:Name="MoveUpButton" Content="Move Up" Width="80" Click="MoveUpButton_Click" Margin="0,0,0,5"/>
                    <Button x:Name="MoveDownButton" Content="Move Down" Width="80" Click="MoveDownButton_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="FTP Cache Settings" FontWeight="Bold" Margin="0,0,0,8"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Cache Lifetime (hours):" VerticalAlignment="Center"/>
                <Slider x:Name="CacheLifetimeSlider" Grid.Row="0" Grid.Column="2" 
                        Minimum="0.5" Maximum="24" Value="1" 
                        TickFrequency="0.5" IsSnapToTickEnabled="True" 
                        VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="3" 
                           Text="{Binding ElementName=CacheLifetimeSlider, Path=Value, StringFormat={}{0:F1} hours}" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
                
                <Button x:Name="ClearExpiredCachesButton" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                        Content="Clear All Expired Caches" Click="ClearExpiredCachesButton_Click" 
                        HorizontalAlignment="Left" Width="200"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="5">
            <TextBlock Text="Visibility Settings" FontWeight="Bold" Margin="0,10,0,8"/>
            <TextBlock Text="(These settings will be available after creating repositories and events)" 
                       FontSize="12" Foreground="#999" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" Width="100" Click="SaveButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Click="CancelButton_Click" Background="#3F3F46">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Background" Value="#3F3F46"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
